<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Likes</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.likes %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', user_post_path(@user, post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
        <td><%= link_to 'Destroy', user_post_path(@user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path(params[:user_id]) %> |
